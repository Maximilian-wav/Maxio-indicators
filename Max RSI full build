{Standard RSI indicator- simplified from the default built in function}

{declare inputs}

Inputs: 
Price(close),
Length(14),
OverSold(30),
OverBought(70),
OverSColor(Cyan), OverBColor(Red);

{Variables}

Vars: Var0 (0);

{calculate and assign values}

Var0 = RSI(price,length);

Plot1(Var0, "RSI", Green,4);
Plot2( OverBought, "OverB", Red,4);
Plot3(OverSold, "OverS", Cyan,4);

if var0 > OverBought then 
	SetPlotColor( 1, OverBColor ) 
else if var0 < OverSold then 
	SetPlotColor( 1, OverSColor ) ;
	
	{alert critera}

condition1 = var0 crosses over OverSold ;
if condition1 then
	Alert( "Indicator exiting oversold zone" )
else 
begin 
condition1 = var0 crosses under OverBought ;
if condition1 then
	Alert( "Indicator exiting overbought zone" ) ;
end;
